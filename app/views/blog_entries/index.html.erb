<style type="text/css">
  .article {
    width: 65%;
  }

  .asset h1 {
    color: #333;
    font: bold 32px/34px 'helvetica','arial',sans-serif;
    margin: 0;
    padding: 20px 0 0;
  }

  .asset-metabar {
    border: 1px solid #E6E6E6;
    border-radius: 3px;
    display: table-cell;
    margin: 20px 0 0 0;
    width: 918px;
  }

  .asset-metabar-time.nobyline {
    border: 0;
  }
  .asset-metabar-time {
    border-left: 1px solid #E1E1E1;
    color: #999;
    font-style: italic;
    font-weight: 400;
  }

  .asset-metabar-utility {
    float: right;
  }

  .asset-metabar-item {
    float: left;
    font-size: 12px;
    font-weight: 700;
    line-height: 14px;
    margin: 6px 0;
    padding: 2px 10px;
    position: relative;
  }

  .asset-metabar-utility .asset-metabar-item {
    cursor: pointer;
    padding-left: 25px;
  }
</style>

<ul class="breadcrumb">
  <li><%= link_to "Return to blog list", root_path %></li>
  <span class="divider">/</span>
</ul>
<br/>
<br/>

<% if @blog_entries.count == 0 %>
  No blogs available. Check back later.
  <br/>
  <br/>
<% else %>
  <div class="article">
      <% @blog_entries.each do |blog|%>
        <div class="asset">
          <h1><%= blog.title %></h1>
        </div>
        <div class="asset-metabar">
          <span class="asset-metabar-time asset-metabar-time.nobyline">
            <%= blog.updated_at %>
          </span>
          <div class="asset-metabar-utility">
            <span class="asset-metabar-share- asset-metabar-item">
              Share
            </span>
          </div>
        </div>
        <br/>
        <br/>
        <p><%= raw(blog.story) %></p>
        <hr>
      <% end %>
    
  </div>
<% end %>
<br />


