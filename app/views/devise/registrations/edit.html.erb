<div class="navbar">
  <div class="navbar-inner">
    <a class="brand" href="#">Blog Admin</a>
    <ul class="nav">
      <li><%= link_to "Return to Blog List", home_index_path %></li>
      <li><%= link_to "Create New Blog Entry", new_blog_entry_path %></li>
      <li class="active"><%= link_to "Edit my profile", edit_user_registration_path %></li>
      <li><%= link_to t(:logout, :user => current_user.email), destroy_user_session_path, :method => :delete %></li>
    </ul>
  </div>
</div>
<br/>
<br/>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="control-group">
    <%= f.label :email, :for => "user_email", :class => "control-label" %>
    <div class="controls">
        <%= f.email_field :email  %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, :for => "user_password", :class => "control-label" %>
    <div class="controls">
        <%= f.password_field :password, :autocomplete => "off", :placeholder => "leave blank if you don't want to change it", :class => "field span5" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password_confirmation, :for => "user_password_confirmation", :class => "control-label" %>
    <div class="controls">
        <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :current_password, :for => "user_current_password", :class => "control-label" %>
    <div class="controls">
        <%= f.password_field :current_password, :placeholder => "we need your current password to confirm your changes", :class => "field span5" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label t(:bio), :for => "user_bio", :class => "control-label" %>
    <div class="controls">
        <%= f.text_area :bio, :placeholder => t(:bio_placeholder), :class => "field span7" %>
    </div>
  </div>

  <div class="">Upload an image to be used as your avatar. <br/> <%= f.file_field :image %> </div>
  <br/>
  <div><%= f.submit "Update", :class => "btn-primary" %> <%= link_to "Cancel", :back, :class => "btn" %></div>

<% end %>
