<style type="text/css">
  .article {
    background-color: #F1F8E0;
    box-shadow: 2px 2px 2px #888888;
    padding-left: 5px;
    padding-top: 5px;
    padding-right: 5px;
	color:#2887bf;
    font-size:14px;
    font-family:'Lucida Grande', 'Trebuchet', 'Tahoma', 'Verdana', 'Arial';    
  }

  .bio {
    float: right;
  }

</style>
<br/>
<br/>
<% @users.each do |user| %>
	<div class="article">
    <div class="row-fluid">
      <div class="span2">
        <%= image_tag user.image_url(:thumb).to_s %>
      </div>
      <div class="span6">
        <%= link_to raw(user.bio_appender), blog_entries_path(:user_id => user.id) %>
      </div>
      <div class="span4">
        Blog last updated ...
      </div>
    </div>
	</div>
	<br/>
<% end %>
<br/>
